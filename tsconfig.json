{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "composite": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/types/custom.d.ts"]
}
